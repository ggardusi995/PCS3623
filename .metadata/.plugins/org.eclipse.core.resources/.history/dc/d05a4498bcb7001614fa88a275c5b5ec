package view;

import java.awt.Dimension;

import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JTextArea;
import javax.swing.JTextField;

public class MyFrame extends JFrame {

	public static void setupFrame() {
		MyFrame jf = new MyFrame();
		JPanel jp = new JPanel();

		JTextArea select = new JTextArea("Mostrar");
		JComboBox<String> model = new JComboBox<String>(Listas.models);
		JTextArea where = new JTextArea("Onde");
		JComboBox<String> field = new JComboBox<String>();
		JTextField condition = new JTextField();
		JButton search = new JButton("Pesquisar");
		
		jp.add(select);
		jp.add(model);
		jp.add(where);
		jp.add(field);
		jp.add(condition);

		jf.setSize(new Dimension(800, 600));
		jf.setLocationRelativeTo(null);
		jf.setContentPane(jp);
		jf.setVisible(true);
	}

	public static void main(String[] args) {
		setupFrame();
	}
}
